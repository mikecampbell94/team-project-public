<GameplayScript>
	<ReceiveMessage type="PlayerInputMessage">
		<Action>
			<Condition bool ="OR">
				<playerID>0</playerID>
				<playerID>1</playerID>
			</Condition>
			<SendMessage type="TEXT">
				<destination>RenderingSystem</destination>
				<text>Renderer recieved input message for some reason</text>
			</SendMessage>
		</Action>
	</ReceiveMessage>
	<Timed interval="0.1">
		<SendMessage type="TRANSLATE_SCENE_NODE">
			<destination>RenderingSystem</destination>
			<translation>
				<x>1</x>
				<y>0</y>
				<z>0</z>
			</translation>
			<relative>1</relative>
			<resource>playerBall</resource>
		</SendMessage>
	</Timed>
	<Timed interval="2.0">
		<SendMessage type="TEXT">
			<destination>RenderingSystem</destination>
			<text>every 2 seconds</text>
		</SendMessage>
	</Timed>
</GameplayScript>
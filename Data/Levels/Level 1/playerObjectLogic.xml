<GameObjectLogic>

	<Resources>

		<resource>player0</resource>
		<resource>player1</resource>
		<resource>player2</resource>
	</Resources>


	<GameplayScript>
		<ReceiveMessage type="InputMessage">
			<Action>
				<Condition>
					<playerName>var</playerName>
					<key>32</key>
				</Condition>

				<SendMessage type="TOGGLE_INPUT_KEY">
					<destination>InputManager</destination>
					<player>var</player>
					<key>KEYBOARD_SPACE</key>
					<enabled>False</enabled>
				</SendMessage>
			</Action>
		</ReceiveMessage>

		<ReceiveMessage type="CollisionMessage">
			<Action>
				<Condition type="AND">
					<objectIdentifier>var</objectIdentifier>
					<colliderIdentifier>floor</colliderIdentifier>
				</Condition>

				<SendMessage type="TOGGLE_INPUT_KEY">
					<destination>InputManager</destination>
					<player>var</player>
					<key>KEYBOARD_SPACE</key>
					<enabled>True</enabled>
				</SendMessage>
			</Action>
		</ReceiveMessage>

		<ReceiveMessage type="CollisionMessage">
		<Action>
			<Condition>
				<objectIdentifier>var</objectIdentifier>
			</Condition>
			<Condition type="OR">
				<colliderIdentifier>player0</colliderIdentifier>
				<colliderIdentifier>player1</colliderIdentifier>
				<colliderIdentifier>player2</colliderIdentifier>
				<colliderIdentifier>AI</colliderIdentifier>
				<colliderIdentifier>AI2</colliderIdentifier>
				<colliderIdentifier>enemy</colliderIdentifier>
			</Condition>

			<SendMessage type="MOVING_SOUND">
				<destination>AudioSystem</destination>
				<priority>SOUNDPRIORITY_HIGH</priority>
				<volume>0.5</volume>
				<radius>1.0</radius>
				<pitch>1.0</pitch>
				<isLooping>false</isLooping>
				<isGlobal>true</isGlobal>
				<sound>punch1</sound>
				<soundNodeID>collision</soundNodeID>
			</SendMessage>
		</Action>
	 </ReceiveMessage>
		
	</GameplayScript>

	<PaintGameLogic>

		<OnStart>
			<CreateMeteorPool>
				<resource>var</resource>
				<amount>10</amount>
				<Mesh>MeteorMesh</Mesh>
				<Size>20</Size>
				<isReflective>0.8</isReflective>
			</CreateMeteorPool>

			<SetMaxPaint>
				<resource>var</resource>
				<paint>100</paint>
			</SetMaxPaint>
		</OnStart>

		<ReceiveMessage type="CollisionMessage">
			<Action>
				<Condition type="AND">
					<objectIdentifier>var</objectIdentifier>
					<colliderIdentifier>floor</colliderIdentifier>
				</Condition>

				<CheckPaint>
					<resource>var</resource>
					<SendMessage type="PAINT_TRAIL_FOR_GAMEOBJECT">
						<destination>RenderingSystem</destination>
						<resource>var</resource>
					</SendMessage>
				</CheckPaint>
			</Action>
		</ReceiveMessage>

		<ReceiveMessage type="CollisionMessage">
			<Action>
				<Condition type="AND">
					<objectIdentifier>var</objectIdentifier>
					<colliderIdentifier>paintPool</colliderIdentifier>
				</Condition>

				<RegainPaint>
					<resource>var</resource>
				</RegainPaint>
			</Action>
		</ReceiveMessage>


		<ReceiveMessage type="CollisionMessage">
			<Action>
				<Condition type="AND">
					<objectIdentifier>var</objectIdentifier>					
					<colliderIdentifier>AI</colliderIdentifier>
				</Condition>

				<PaintMinion>
					<resource>var</resource>
					<minion>AI</minion>
				</PainMinion>
			</Action>
		</ReceiveMessage>

		<ReceiveMessage type="CollisionMessage">
			<Action>
				<Condition type="AND">
					<objectIdentifier>var</objectIdentifier>					
					<colliderIdentifier>AI2</colliderIdentifier>
				</Condition>

				<PaintMinion>
					<resource>var</resource>
					<minion>AI2</minion>
				</PainMinion>
			</Action>
		</ReceiveMessage>



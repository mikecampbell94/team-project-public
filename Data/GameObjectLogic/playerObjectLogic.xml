<GameObjectLogic>

	<Resources>

		<resource>player0</resource>
		<resource>player1</resource>
		<resource>player2</resource>
	</Resources>


	<GameplayScript>
		<ReceiveMessage type="InputMessage">
			<Action>
				<Condition>
					<playerName>var</playerName>
					<key>32</key>
				</Condition>

				<SendMessage type="TOGGLE_INPUT_KEY">
					<destination>InputManager</destination>
					<player>var</player>
					<key>KEYBOARD_SPACE</key>
					<enabled>False</enabled>
				</SendMessage>
			</Action>
		</ReceiveMessage>

		<ReceiveMessage type="CollisionMessage">
			<Action>
				<Condition type="AND">
					<objectIdentifier>var</objectIdentifier>
					<colliderIdentifier>floor</colliderIdentifier>
				</Condition>

				<SendMessage type="TOGGLE_INPUT_KEY">
					<destination>InputManager</destination>
					<player>var</player>
					<key>KEYBOARD_SPACE</key>
					<enabled>True</enabled>
				</SendMessage>
			</Action>
		</ReceiveMessage>

		
	</GameplayScript>

	<PaintGameLogic>

		<OnStart>
			<SetMaxPaint>
				<resource>var</resource>
				<paint>100</paint>
			</SetMaxPaint>
			<PrintText>
				<text>Hard coded logic text printing</text>
			</PrintText>
		</OnStart>

		<ReceiveMessage type="InputMessage">
			<Action>
				<Condition type="AND">
					<playerName>var</playerName>
					<key>32</key>
				</Condition>

				<PrintText>
					<text>Hard coded logic text printing</text>
				</PrintText>

				
			</Action>
		</ReceiveMessage>

		<ReceiveMessage type="CollisionMessage">
			<Action>
				<Condition type="AND">
					<objectIdentifier>var</objectIdentifier>
					<colliderIdentifier>floor</colliderIdentifier>
				</Condition>

				<CheckPaint>
					<resource>var</resource>
					<SendMessage type="PAINT_TRAIL_FOR_GAMEOBJECT">
						<destination>RenderingSystem</destination>
						<resource>var</resource>
					</SendMessage>
				</CheckPaint>
			</Action>
		</ReceiveMessage>

		<ReceiveMessage type="CollisionMessage">
			<Action>
				<Condition type="AND">
					<objectIdentifier>var</objectIdentifier>
					<colliderIdentifier>paintPool</colliderIdentifier>
				</Condition>

				<RegainPaint>
					<resource>var</resource>
				</RegainPaint>
			</Action>
		</ReceiveMessage>


		<ReceiveMessage type="CollisionMessage">
			<Action>
				<Condition type="AND">
					<objectIdentifier>var</objectIdentifier>					
					<colliderIdentifier>AI</colliderIdentifier>
				</Condition>

				<PaintMinion>
					<resource>var</resource>
					<minion>AI</minion>
				</PainMinion>
			</Action>
		</ReceiveMessage>

		<ReceiveMessage type="CollisionMessage">
			<Action>
				<Condition type="AND">
					<objectIdentifier>var</objectIdentifier>					
					<colliderIdentifier>AI2</colliderIdentifier>
				</Condition>

				<PaintMinion>
					<resource>var</resource>
					<minion>AI2</minion>
				</PainMinion>
			</Action>
		</ReceiveMessage>


		<ReceiveMessage type="CollisionMessage">
			<Action>
				<Condition type="AND">
					<objectIdentifier>var</objectIdentifier>
					<colliderIdentifier>powerup</colliderIdentifier>
				</Condition>

				<ScalePlayer>
					<resource>var</resource>
					<multiplier>3</multiplier>
				</ScalePlayer>

				<SendMessage type="TOGGLE_GAMEOBJECT">
					<destination>RenderingSystem</destination>
					<resource>powerup</resource>
					<enabled>False</enabled>
				</SendMessage>

			</Action>
		</ReceiveMessage>


		<Timed interval="0.5">
			<ReducePaint>
				<resource>var</resource>
			</ReducePaint>
		</Timed>

	</PaintGameLogic>

</GameObjectLogic>